{{>fragments/header}}

<div class="row">
    <div class="offset-1 col-5" style="border-right: solid 1px black;">
        <h2>{{dto.name}}</h2>
        <br/>
        <h4>도로명 주소 : {{dto.roadNameAddress}}</h4>
        <h4>전화 번호 : {{dto.phone}}</h4>
        <h4>영업 상태 : {{dto.status}}</h4>
        <h4>업태 구분 명 : {{dto.type}}</h4>
        <h4>의료인 수 : {{dto.employeesCnt}}명</h4>
        <h4>입원실 : {{dto.hasInpatientRoom}}</h4>
        <h4>병원 면적 : {{dto.area}}㎡</h4>
    </div>
    <div class="col-5" style="margin-left: 30px">
        <h2>리뷰 추가</h2>
        <form action="/hospitals/{{dto.id}}/reviews" method="post">
            <div class="mb-3">
                <label for="writer" class="form-label" style="width: 70px;">작성자 : </label>
                <input type="text" name="writer">
                <button type="submit" class="btn btn-warning">리뷰 등록</button><br/>
                <label for="texts" class="form-label" style="width: 70px;">리뷰 내용 : </label>
                <textarea rows="3" name="texts" cols="50"></textarea>
            </div>
        </form>
        <br/><hr/><br/>
        <h2>리뷰 리스트</h2>
        <table class="table list-table table-hover text-center">
            <thead class="table-warning">
            <tr>
                <th>작성자</th>
                <th>리뷰 내용</th>
                <th>작성일</th>
            </tr>
            </thead>
            <tbody>
            {{#reviewList}}
                <tr>
                    <th>{{writer}}</th>
                    <th>{{texts}}</th>
                    <th>{{createdAt}}</th>
                </tr>
            {{/reviewList}}
            </tbody>
        </table>
    </div>

</div>

{{>fragments/footer}}